
@{
    ViewBag.Title = "ClienteProgresso";
    Layout = "~/Views/Shared/_TrainerNavbar.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Progresso do Cliente</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/a7c7c4a450.js" crossorigin="anonymous"></script>
</head>
<body>

    <div class="" style="margin-top:70px;">
        <h2 class="ml-3 mb-3">Progresso de: <span style="color:darkorange;">Carlos Santos</span></h2>
    </div>

    <div class="row pl-4 pr-4">
        <!--Pesagens-->
        <div class="col-12 col-md-6 mt-3">
            <p class="text-center font-weight-bold h4">Tabela de Pesagens</p>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Data</th>
                        <th scope="col">Peso (Kg)</th>
                        <th scope="col">% Massa Gorda</th>
                        <th scope="col">% Massa Magra</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 12, p = 75, g = 24, m = 72;
                        while (i > 0)
                        {
                            <tr>
                                <th scope="row">31/07/2021</th>
                                <td>@p</td>
                                <td>@g</td>
                                <td>@m</td>
                            </tr>
                            p--;
                            g--;
                            m++;
                            i--;
                        }
                    }
                </tbody>
            </table>
        </div>
        <!--Medidas-->
        <div class="col-12 col-md-6 mt-3">
            <p class="text-center font-weight-bold h4">Tabela de Medidas</p>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Data</th>
                        <th scope="col">Braço (cm)</th>
                        <th scope="col">Abdominal (cm)</th>
                        <th scope="col">Peitoral (cm)</th>
                        <th scope="col">Coxa (cm)</th>
                        <th scope="col">Gémeo (cm)</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int j = 7, ba = 35, ab = 76, pe = 81, co = 63, ge = 36;
                        while (j > 0)
                        {
                            <tr>
                                <th scope="col">20/06/2021</th>
                                <td>@ba</td>
                                <td>@ab</td>
                                <td>@pe</td>
                                <td>@co</td>
                                <td>@ge</td>
                            </tr>
                            ba++;
                            ab--;
                            pe++;
                            co++;
                            ge++;
                            j--;
                        }
                    }
                </tbody>
            </table>
        </div>
        <!--Fotos-->

    </div>
    <!--Fotos-->
    <div class="mt-3 mx-auto" style="max-width:1400px;">
        <p class="text-center font-weight-bold h4">Evolução Corporal</p>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Data</th>
                    <th scope="col">Frontal</th>
                    <th scope="col">Lateral</th>
                    <th scope="col">Traseira</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int x = 4; ;
                    while (x > 0)
                    {
                        <tr>
                            <th scope="row">25/05/2021</th>
                            <td><img src="~/Content/images/fotoFrente.png" class="w-100" alt="Foto de frente"></td>
                            <td><img src="~/Content/images/fotoLado.png" class="w-100" alt="Foto de lado"></td>
                            <td><img src="~/Content/images/fotoTras.png" class="w-100" alt="Foto de trás"></td>
                        </tr>
                        x--;
                    }
                }
            </tbody>
        </table>
    </div>


    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
    <script>

    </script>
</body>
</html>


