    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <div class="box-form">
                <div class="content-form">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <h2>Login</h2>
                        <div class="form-group">
