    <div class="row justify-content-md-center">
        <div class="col-md-5 content-form">
            <div class="box-form">
                <div class="content-form">
                    @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                    {@Html.AntiForgeryToken()
                    <h2>Registar</h2>
                    <div class="form-group ">
                        <label>Nome Completo</label>
                        @Html.TextBoxFor(m => m.nomeCompleto, "", new { @class = "form-control", @placeholder = "Nome Completo" })
                        @Html.ValidationMessageFor(m => m.nomeCompleto, "Por Favor introduza o seu Nome Completo", new { @class = "text-danger" })
                    </div>
                    <div>
                        <div class="form-group">
                            <label>Username</label>
                            @Html.TextBoxFor(m => m.nomePerfil, "", new { @class = "form-control", @placeholder = "Username" })
                            @Html.ValidationMessageFor(m => m.nomePerfil, "Please enter your Username", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div>
                        <div class="form-group">
                            <div><label>Email</label></div>
                            <div>
                                @Html.TextBoxFor(m => m.email, "", new { @class = "form-control", @placeholder = "Email" })
                                @Html.ValidationMessageFor(m => m.email, "Please enter email", new { @class = "text-danger" })
                                @if (ViewBag.error != null)
                                {
                                    <span class="badge badge-danger">@ViewBag.error</span>
                                }
                            </div>
                            
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.password, "Palavra passe necessita de uma maiúscula, uma minúscula, 1 numero, e um simbolo", new { @class = "text-info, invalid-feedback" })
                    </div>
